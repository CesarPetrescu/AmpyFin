# Copy this file to `.env` and fill in your credentials before running AmpyFin.
# Strings should stay quoted to preserve characters like `+` or `/` in keys.

# --- Trading & Experiment Tracking ---
API_KEY="your_alpaca_api_key"
API_SECRET="your_alpaca_secret_key"
BASE_URL="https://paper-api.alpaca.markets"  # Use https://api.alpaca.markets for live trading ONLY
WANDB_API_KEY="your_wandb_api_key"

# --- Database ---
MONGO_URL="mongodb+srv://<username>:<password>@cluster0.mongodb.net/ampyfin"

# --- AI News Analyst + Newswire Feeds ---
LLM_API_KEY="sk-your_llm_key"
LLM_API_MODEL="deepseek-chat"
LLM_API_BASE="https://api.deepseek.com/v1/"
MARKETAUX_API_KEY="your_marketaux_key"   # Primary headline feed
NEWSDATA_API_KEY="your_newsdata_key"     # Backup headline feed
